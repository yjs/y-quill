{
  "name": "y-quill",
  "version": "0.1.0",
  "description": "QuillJs bindings for Yjs",
  "main": "./dist/y-quill.js",
  "module": "./src/y-quill.js",
  "types": "./dist/src/y-quill.d.ts",
  "sideEffects": false,
  "scripts": {
    "dist": "rm -rf dist && rollup -c",
    "test": "rollup -c && node test/test.cjs",
    "lint": "standard && tsc",
    "watch": "rollup -wc",
    "debug": "concurrently 'live-server --port=3443 --entry-file=test.html' 'npm run watch'",
    "preversion": "npm run lint && npm run dist && npm run test"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/y-js/y-quill.git"
  },
  "keywords": [
    "Yjs"
  ],
  "author": "Kevin Jahns <kevin.jahns@protonmail.com>",
  "license": "MIT",
  "standard": {
    "ignore": [
      "/dist",
      "/node_modules",
      "/docs"
    ]
  },
  "bugs": {
    "url": "https://github.com/y-js/y-quill/issues"
  },
  "homepage": "https://github.com/y-js/y-quill#readme",
  "dependencies": {
    "lib0": "0.2.22"
  },
  "peerDependencies": {
    "yjs": "^13.0.0",
    "y-protocols": "^0.2.2",
    "quill": "^1.3.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "concurrently": "^4.1.2",
    "jsdom": "^15.2.1",
    "live-server": "^1.2.1",
    "quill": "^1.3.7",
    "rollup": "^1.30.0",
    "standard": "^12.0.1",
    "y-protocols": "0.2.2",
    "yjs": "^13.0.5"
  }
}
